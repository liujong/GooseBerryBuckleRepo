<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.appstute.smartbuckle">


    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name="appstute.in.smartbuckle.ui.activity.ServiceCall"
        android:allowBackup="true"
        android:icon="@mipmap/smart_buckle_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <supports-screens
            android:smallScreens="true"
            android:normalScreens="true"
            android:largeScreens="true"
            android:xlargeScreens="true"
            android:anyDensity="true" />

        <activity
            android:name="appstute.in.smartbuckle.ui.activity.SplashScreenActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="appstute.in.smartbuckle.ui.activity.FirstScreenActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="appstute.in.smartbuckle.ui.activity.LoginScreenActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="appstute.in.smartbuckle.ui.activity.RegisterScreenActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="appstute.in.smartbuckle.ui.activity.RegUserProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="appstute.in.smartbuckle.ui.activity.DeviceConnectActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="appstute.in.smartbuckle.ui.activity.HeightSelectActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="appstute.in.smartbuckle.ui.activity.WeightSelectionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="appstute.in.smartbuckle.ui.activity.RegisterDeviceSuccess"
            android:screenOrientation="portrait" />
        <activity
            android:name="appstute.in.smartbuckle.ui.activity.ResetPasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="appstute.in.smartbuckle.ui.activity.AddBuckleActivity"
            android:screenOrientation="portrait" />
        <activity android:name="appstute.in.smartbuckle.ui.activity.HomeMoveActivity"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name="appstute.in.smartbuckle.ui.activity.EditProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="appstute.in.smartbuckle.ui.activity.GoogleFitActivity"
            android:screenOrientation="portrait" />

        <activity android:name="appstute.in.smartbuckle.ui.activity.AssistMeActivity"
            android:screenOrientation="portrait"/>

        <activity android:name="appstute.in.smartbuckle.ui.activity.PhilosophyActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>