<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/commonbg"
    tools:context="in.appstute.smartbuckle.ui.activity.LoginScreenActivity">

    <RelativeLayout
        android:id="@+id/loginHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/loginHeaderTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hello_and_welcome"
            android:textSize="40sp"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/loginSubheaderTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loginHeaderTxt"
            android:layout_marginTop="30dp"
            android:textColor="#5B3428"
            android:text="Please login to continue \n your journey :)"
            android:textSize="35sp"
            android:gravity="center"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp">

    <EditText
            android:id="@+id/loginUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="#816c5b"
            android:hint="Username"
            android:textColorHint="#989898"
            android:textSize="40sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    <EditText
            android:id="@+id/loginPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:inputType="textPassword"
            android:maxLength="15"
            android:textColor="#816c5b"
            android:layout_below="@+id/loginUsername"
            android:hint="Password"
            android:textColorHint="#989898"
            android:textSize="40sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    <Button
            android:id="@+id/resetBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loginUsername"
            android:layout_marginRight="-5dp"
            android:layout_alignParentRight="true"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@drawable/btn_textchange"
            android:background="@drawable/reset_btn"
            android:text="Reset"/>

        <Button
            android:id="@+id/loginMainbtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loginPassword"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:text="Login"
            android:textAllCaps="false"
            android:textSize="35sp"
            android:textColor="@drawable/btn_textchange"
            android:background="@drawable/btn_backgroundchange"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="38dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/loginBottomTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="If this is your first time, you can"

            android:gravity="center"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/regWith"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loginBottomTxt"
            android:text="register with us"
            android:layout_marginStart="80dp"
            android:textSize="30sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loginBottomTxt"
            android:id="@+id/regHereTxt"
            android:layout_toRightOf="@+id/regWith"
            android:layout_marginLeft="10dp"
            android:text="here"
            android:textColor="#5b3428"
            android:textSize="30sp"/>

    </RelativeLayout>

</RelativeLayout>
