<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/commonbg"
    tools:context="in.appstute.smartbuckle.ui.activity.AddBuckleActivity">

    <RelativeLayout
        android:id="@+id/buckleAddText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/navBackArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/navarrow"
            android:layout_marginLeft="-10dp"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/addBuckleHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentStart="true"
            android:text="@string/add_buckle_head"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/relativeInfoText"
        android:visibility="gone"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:id="@+id/infoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#3f2314"
            android:layout_centerVertical="true"
            android:text="Currently you have no\nSmart Buckles paired with the app"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="210dp"
        android:layout_height="350dp"
        android:id="@+id/relativeListView"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <ListView
            android:id="@+id/scan_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#00000000"
            android:paddingBottom="5dip"
            android:layout_centerHorizontal="true"
            android:scrollbarStyle="outsideOverlay" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/relativeAddBuckle"
        android:layout_marginBottom="20dp">

    <ImageView
        android:id="@+id/imageViewAddBuckle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/plusicon"/>


    </RelativeLayout>

</RelativeLayout>
