<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/commonbg"
    tools:context="in.appstute.smartbuckle.ui.activity.ResetPasswordActivity">

    <RelativeLayout
        android:id="@+id/resetHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="25dp">

        <ImageView
            android:id="@+id/navigateResetToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/navarrow"
            android:layout_marginTop="-8dp"
            android:layout_marginLeft="-10dp"/>

        <TextView
            android:id="@+id/resetHeaderTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reset_screen_header"
            android:textSize="25sp"
            android:textColor="#1a1a1a"
            android:gravity="center"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/resetSubheaderTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/resetHeaderTxt"
            android:layout_marginTop="25dp"
            android:textColor="#272625"
            android:text="@string/reset_screen_subhead"
            android:textSize="20sp"
            android:gravity="center"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">

        <EditText
            android:id="@+id/resetUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textColor="#3f2314"
            android:hint="Cell Phone"
            android:textColorHint="#696764"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <Button
            android:id="@+id/resetPassSendBtn"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/resetUsername"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:text="Send"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textColor="@drawable/btn_textchange"
            android:background="@drawable/btn_backgroundchange"/>

    </RelativeLayout>



</RelativeLayout>
